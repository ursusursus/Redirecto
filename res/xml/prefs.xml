<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <PreferenceCategory android:title="Lokalizácia" >
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="auto_loc"
            android:summary="Automatická lokalizácia"
            android:title="Automatická lokalizácia" />

        <ListPreference
            android:defaultValue="15000"
            android:dependency="auto_loc"
            android:entries="@array/frequency_names"
            android:entryValues="@array/frequency_values"
            android:key="loc_frequency"
            android:summary="Frekvencia lokalizácie"
            android:title="Frekvencia lokalizácie" />

        <sk.tuke.ursus.redirecto.util.SeekBarDialogPreference
            android:defaultValue="50"
            android:key="max_acc_coef"
            android:summary="Maximálny koeficient presnosti lokalizácie. Čím väčší, tým väčšia povolená odchýlka"
            android:title="Max Koeficient" />
    </PreferenceCategory>

</PreferenceScreen>