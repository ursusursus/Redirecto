<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="240dp"
    android:layout_height="320dp"
    android:background="@color/gray"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/nameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/descTextView"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif-light"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp"
        android:text="A511"
        android:textColor="#000"
        android:textSize="26sp" />

    <TextView
        android:id="@+id/descTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/currentTextView"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif-condensed"
        android:paddingBottom="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:text="ADMIN"
        android:textAllCaps="true"
        android:textColor="@color/dark_gray"
        android:textSize="16sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/currentTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/view1"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif-condensed"
        android:paddingBottom="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:text="Miestnosť nastavená ako aktuálna"
        android:textColor="#FFF"
        android:textStyle="italic" />

    <ProgressBar
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_below="@+id/descTextView"
        android:layout_centerHorizontal="true" />

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@+id/buttonBar"
        android:background="@color/separator_color" />

    <LinearLayout
        android:id="@+id/buttonBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#FFF"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/removeButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/item_selector"
            android:drawableTop="@drawable/ic_action_discard_dark"
            android:fontFamily="sans-serif-condensed"
            android:padding="12dp"
            android:text="ODSTRÁNIŤ"
            android:textColor="@color/dark_gray"
            android:textSize="14sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="12dp"
            android:background="@color/separator_color" />

        <Button
            android:id="@+id/forceButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/item_selector"
            android:drawableTop="@drawable/ic_action_location_found_dark"
            android:fontFamily="sans-serif-condensed"
            android:padding="12dp"
            android:text="NASTAVIŤ"
            android:textColor="@color/dark_gray"
            android:textSize="14sp" />
    </LinearLayout>

</RelativeLayout>