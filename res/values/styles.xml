<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools" tools:ignore="NewApi">

    <style name="Theme.MyStyle" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarItemBackground">@drawable/action_item_selector</item>
        <item name="android:actionBarStyle">@style/SolidActionBar.MyStyle</item>
        <item name="android:actionOverflowButtonStyle">@android:style/Widget.Holo.ActionButton.Overflow</item>
        <item name="android:homeAsUpIndicator">@drawable/up_button_dark</item>
    </style>

    <style name="Theme.MyStyle.Login" parent="@style/Theme.MyStyle">
        <item name="android:windowBackground">@drawable/login_bg</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="SolidActionBar.MyStyle" parent="@android:style/Widget.Holo.Light.ActionBar.Solid">
        <item name="android:background">@color/base_green</item>
        <item name="android:titleTextStyle">@style/ActionBarTitleTextStyle.MyStyle</item>
        <item name="android:subtitleTextStyle">@style/ActionBarSubTitleTextStyle.MyStyle</item>
        <item name="android:indeterminateProgressStyle">@style/ActionBarProgressBar.MyStyle</item>
    </style>

    <style name="ActionBarTitleTextStyle.MyStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textStyle">italic|bold</item>
    </style>

    <style name="ActionBarSubTitleTextStyle.MyStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Subtitle">
        <item name="android:textColor">#BBFFFFFF</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="ActionBarProgressBar.MyStyle" parent="@android:style/Widget.Holo.ProgressBar.Small">
        <item name="android:minWidth">28dp</item>
        <item name="android:maxWidth">28dp</item>
        <item name="android:minHeight">28dp</item>
        <item name="android:maxHeight">28dp</item>
    </style>

    <style name="BigButton">
        <item name="android:padding">20dp</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/btn_default_holo_light</item>
    </style>

</resources>